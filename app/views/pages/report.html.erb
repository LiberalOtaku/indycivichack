<div id="form" class="col-xs-8 col-xs-offset-2">
  <h1>Report an Issue</h1>
  <form id="issueForm">
    <h4>Your Name</h4>
    <input type="text"
           name="clientName"
           class="form-control"
           placeholder="Enter Your Name"
           required>
    <h4>Your Email Address</h4>
    <input type="email"
           name="email"
           class="form-control"
           placeholder="Enter Your Email"
           required>
    <h4>Subject</h4>
    <input type="text"
           name="subject"
           class="form-control"
           placeholder="Enter Subject"
           required>
    <h4>Message</h4>
    <textarea name="message"
              rows="5"
              class="form-control"
              placeholder="Enter Your Message"
              required></textarea>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
  </form>

  <div class="alert-area">
  </div>
